// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Tests, lint and docs",
            "command": "tox -p",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "Open docs",
            "command": "firefox build/html/index.html",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
        },
        {
            "type": "process",
            "label": "Run simulation",
            "command": "./.venv/bin/python",
            "args": [
                "-m",
                "tickit",
                "all",
                "./src/demo_fast_cs/simulation/temp_controller.yaml",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
        },
        {
            "type": "process",
            "label": "Connect to simulation",
            "command": "nc",
            "args": [
                "localhost",
                "25565",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
        },
    ]
}